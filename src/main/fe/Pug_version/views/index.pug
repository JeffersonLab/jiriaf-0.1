block content
  rect.login
    p.logintitle Log in to JIRIAF

    form(action='/' method="POST")
      select.login(id='login' name='login')
        - var list= ['Jefferson Lab','National Energy Research Scientific Computing Center']
        option(value="" disabled selected) Choose your institution
        each item in list
          option(value=item) #{item}
      
      a.login(href="/") 
        input.login(type='submit' value='Access through you institution                                ---->') 

      input.clir(type="checkbox" id='Remember' name='Remember')
      p.clir Remember me

